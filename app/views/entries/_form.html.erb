<label class="control-label" for="inputEmail">   Body:</label>
<div class="controls">
 <%= f.text_area :body,:rows=>"3" %>
</div>
</div>

<div class="control-group">
<label class="control-label" for="inputEmail">   </label>
<div class="controls">
 <%= f.hidden_field :category_id, :value=>params[:category_id] %>
